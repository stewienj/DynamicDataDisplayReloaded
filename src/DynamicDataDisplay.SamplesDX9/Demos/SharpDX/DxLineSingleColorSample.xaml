<Page x:Class="DynamicDataDisplay.SamplesDX9.Demos.SharpDX.DxLineSingleColorSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DynamicDataDisplay.SamplesDX9.Demos.SharpDX"
      xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DxLineSingleColorSample">
    <Grid>
        <d3:ChartPlotter>
            <d3:SharpDXHost/>
            <d3:DxLineSingleColor GeometrySource="{Binding Points1}" Color="{Binding Color1}" Depth="1"/>
            <d3:DxLineSingleColor GeometrySource="{Binding Points2}" Color="{Binding Color2}" Depth="1"/>
            <d3:DxLineSingleColor GeometrySource="{Binding Points3}" Color="{Binding Color3}" Depth="1"/>
        </d3:ChartPlotter>
    </Grid>
</Page>
