<Page x:Class="DynamicDataDisplay.SamplesDX9.Demos.SharpDX.DxMultiThickLineTexturedSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamicDataDisplay.SamplesDX9.Demos.SharpDX"
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Page.Resources>
        <d3:DxSharedTexture TextureSource="/DynamicDataDisplay.SamplesDX9;component/Demos/SharpDX/DashedTexture.png" x:Key="DashedTexture"/>
    </Page.Resources>
    <Grid>
        <d3:ChartPlotter x:Name="plotter">
            <d3:SharpDXHost/>
            <d3:DxMultiThickLineTextured GeometrySource="{Binding Points}" Color="Blue" Depth="1" SharedTexture="{StaticResource DashedTexture}" LineThickness="10.0"/>
        </d3:ChartPlotter>
    </Grid>
</Page>
