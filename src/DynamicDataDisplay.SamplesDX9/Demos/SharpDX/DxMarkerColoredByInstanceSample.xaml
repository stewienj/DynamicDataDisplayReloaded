<Page x:Class="DynamicDataDisplay.SamplesDX9.Demos.SharpDX.DxMarkerColoredByInstanceSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DynamicDataDisplay.SamplesDX9.Demos.SharpDX"
      xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DxMarkerColoredByInstanceSample">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <d3:ChartPlotter x:Name="plotter" Grid.ColumnSpan="2">
            <d3:SharpDXHost/>
            <d3:DxMarkerFanColoredByInstance GeometrySource="{Binding Geometry}" Positions="{Binding Positions}" Depth="1"/>
        </d3:ChartPlotter>
        <StackPanel Grid.Column="1">
            <Border BorderBrush="Black" BorderThickness="1" Margin="8" CornerRadius="8" Background="Cornsilk">
                <StackPanel Margin="8">
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                        This example shows 1 million points being animated. For each update, each point will be moved 1 screen pixel
                        regardless of zoom level. The points move in straight lines and bounce off the boundary.
                    </TextBlock>
                    <Button Command="{Binding StopAnimation}">Stop Animation</Button>
                    <Button Command="{Binding StartAnimation}">Start Animation</Button>
                    <Button Command="{Binding ResetCircles}">Reset Circles</Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
